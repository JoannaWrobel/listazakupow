<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table width="100%">
  <thead>
    <tr>
      <th align="left" style="color:red; font-size:20px">Section</th>
      <th align="left" style="color:green; font-size:20px">Name</th>
      <th align="left" style="color:#ff3366; font-size:20px">Quantity</th>
      <th align="left" style="color:#003399; font-size:20px">Unit</th>
      <th align="left" style="color:blue; font-size:20px">Price</th>
      <th align="left" style="color:black; font-size:20px">Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.section %></td>
        <td><%= product.name %></td>
        <td><%= product.quantity %></td>
        <td><%= product.unit %></td>
        <td><%= product.price %></td>
        <td><%= product.comment %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

